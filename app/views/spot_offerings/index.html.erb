<div>
  <div>
    <h1>
      List of all spot offerings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new spot offering
    </h2>

    <form action="/insert_spot_offering" method="post">
      <div>
        <label for="spot_id_box">
          Spot
        </label>

        <input type="text" id="spot_id_box" name="query_spot_id">
      </div>

      <div>
        <label for="amenity_id_box">
          Amenity
        </label>

        <input type="text" id="amenity_id_box" name="query_amenity_id">
      </div>

      <button>
        Create spot offering
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Spot
        </th>

        <th>
          Amenity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_spot_offerings.each do |a_spot_offering| %>
      <tr>
        <td>
          <%= a_spot_offering.id %>
        </td>

        <td>
          <%= a_spot_offering.spot_id %>
        </td>

        <td>
          <%= a_spot_offering.amenity_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_spot_offering.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_spot_offering.updated_at) %> ago
        </td>

        <td>
          <a href="/spot_offerings/<%= a_spot_offering.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
